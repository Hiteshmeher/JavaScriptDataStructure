/**
Extend the Second Largest and Second Smallest program to sort the array 
and then find the 2nd largest and the 2nd smallest element.
*/

let numberArray = new Array();

function generateRandomNumber() {
    return Math.floor(Math.random()*899) + 100;         //generating random 3 digit number
}

console.log("Ten random 3 digit numbers in Array: ")
for (let index = 0; index < 10; index++) {
    numberArray.push(generateRandomNumber());
}
console.log(numberArray);                               // printing 10 random number of 3-digit

numberArray.sort();                                     // sorting the array in accending order

console.log("The Sorted Array is:")
for (let index = 0; index < 10; index++) {
}
console.log(numberArray);                               // printing the sorted array list

console.log("Second Largest Element : " + numberArray[8]);
console.log("Second Smallest Element : " + numberArray[1]);